tar cpf /tmp/full-backup "created on `date '+%d-%B-%Y'`.tar" /etc/xrdp/startwm.sh
tar cpf /tmp/full-backup "created on `date '+%d-%B-%Y'`.tar"  /etc/xrdp
tar cpf /tmp/full-backup "created on `date '+%d-%B-%Y'`.tar"  /var/log
